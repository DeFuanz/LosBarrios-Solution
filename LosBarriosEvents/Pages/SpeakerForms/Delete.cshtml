@page
@model SpeakerFormDeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="container text-center w-75">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this Form?</h3>
    <hr />
    <div class="">
        <dl class="text-center">
            <div class="mt-3 mb-3 bg-white container border border-white rounded">
                <div class="">
                    <dd class="blockquote text-center">
                        @Html.DisplayFor(model => model.Form.Title)
                    </dd>
                    <dd class="d-flex justify-content-between">
                        <div>
                            @Html.DisplayFor(model => model.Form.Description)
                        </div>
                    </dd>
                    <dd class="d-flex justify-content-between">
                        <div>
                            @Html.DisplayFor(model => model.Form.Duration)
                        </div>
                    </dd>
                </div>
            </div>
        </dl>

        <form method="post">
            <div class="d-flex justify-content-between">
                <div>
                    <input type="hidden" asp-for="Form.SpeakerFormId" />
                    <input type="hidden" asp-for="Form.Title" />
                    <input type="hidden" asp-for="Form.Description" />
                    <input type="hidden" asp-for="Form.Duration" />
                    <input type="hidden" asp-for="Form.SpeakerId" />
                    <input type="hidden" asp-for="Form.Speaker" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
                <div>
                    <a class="btn btn-secondary" asp-page="./Index">Cancel</a>
                </div>
            </div>
        </form>

    </div>
</div>