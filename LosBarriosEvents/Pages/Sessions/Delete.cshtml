@page
@model SessionDeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center w-75">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this Session?</h3>
    <hr />
    <div class="">
        <dl class="text-center">
            <div class="mt-3 mb-3 bg-white container border border-white rounded">
                <div class="">
                    <dd class="blockquote text-center">
                        @Html.DisplayFor(model => model.Session.Name)
                    </dd>
                    <dd class="d-flex justify-content-between">
                        <div>
                            @Html.DisplayFor(model => model.Session.StartTime)
                        </div>
                    </dd>
                </div>
            </div>
        </dl>

        <form method="post">
            <div class="d-flex justify-content-between">
                <div>
                    <input type="hidden" asp-for="Session.SessionId" />
                    <input type="hidden" asp-for="Session.Name" />
                    <input type="hidden" asp-for="Session.StartTime" />
                    <input type="hidden" asp-for="Session.EndTime" />
                    <input type="hidden" asp-for="Session.EventId" />
                    <input type="hidden" asp-for="Session.Event" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
                <div>
                    <a class="btn btn-secondary" asp-route-id="@Model.Session.EventId" asp-page="./Index">Cancel</a>
                </div>
            </div>
        </form>

    </div>
</div>