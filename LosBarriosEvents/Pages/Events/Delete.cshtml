@page
@model EventDeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center w-75">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this Event?</h3>
    <hr />

    <div class="table">
        <table>
            <div class="th">
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Time</th>
                        <th>Date</th>
                    </tr>
                </thead>
            </div>
            <div class="td">
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Event.Name)</td>
                        <td>@Html.DisplayFor(model => model.Event.Time)</td>
                        <td>@Html.DisplayFor(model => model.Event.Date)</td>
                    </tr>
                </tbody>
            </div>
        </table>
    </div>


    <form method="post">
        <div class="d-flex justify-content-between">
            <div>
                <input type="hidden" asp-for="Event.EventId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div>
                <a class="btn btn-secondary" asp-page="./Index">Cancel</a>
            </div>
        </div>
    </form>

</div>
</div>